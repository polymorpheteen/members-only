<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="shortcut icon" href="/favicon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon/favicon.ico" type="image/x-icon">
    <title></title>
</head>

<body>
    <div class="box19">
        <div class="box-top">
            <div class="u01"></div>
        </div>
        <div class="box-center">
            <div class="box-inner">
                <section class="user-card">
                    <div class="user-pfp">
                        <img src="/images/pfp.gif" alt="Profile Picture" width="100">
                    </div>

                    <div class="user-info">
                        <h1>Welcome back,
                            <span class="view" data-field="first_name">
                                <%= user.first_name %>
                            </span>
                            <input class="edit" data-field="first_name" value="<%= user.first_name %>" hidden>

                            <span class="view" data-field="last_name">
                                <%= user.last_name %>
                            </span>
                            <input class="edit" data-field="last_name" value="<%= user.last_name %>" hidden>!
                        </h1>

                        <p><span>Username:</span>
                            <span class="view" data-field="username">
                                <%= user.username %>
                            </span>
                            <input class="edit" data-field="username" value="<%= user.username %>" hidden>
                        </p>
                        <p><span>Membership:</span>
                            <%= user.membership_status ? "Premium" : "Basic" %> <img
                                    src="<%= user.membership_status ? '/images/admin-membership-icon.gif' : '/images/basic-membership-icon.gif' %>"
                                    alt="<%= user.membership_status ? 'Premium member' : 'Basic member' %>"
                                    class="membership-icon">
                        </p>

                        <button id="editBtn">Edit Profile</button>
                        <div class="edit-actions">
                            <button id="saveBtn" hidden>Save</button>
                            <button id="cancelBtn" hidden>Cancel</button>
                        </div>
                    </div>
                    <a href="/log-out" class="logout-btn"><span>â‡ </span>Logout</a>
                </section>

                <section class="messages">
                    <h2>All Messages <img src="/images/stars.gif" alt=""></h2>
                    <% if (messages.length===0) { %>
                        <p class="message-container">No messages have been posted yet.</p>
                        <% } else { %>
                            <div class="message-container">
                                <% messages.forEach((msg, index)=> { %>
                                    <div class="message-item <%= index < 3 ? 'visible' : 'hidden' %>">
                                        <p class="message-title">
                                            <%= msg.title %> - (@<%= msg.username %>) - <%= new
                                                        Date(msg.created_at).toLocaleString() %>
                                        </p>
                                        <p class="message-body">
                                            > <%= msg.body %>
                                        </p>
                                    </div>
                                    <% }) %>

                            </div>

                            <% if (messages.length> 3) {%>
                                <button id="showMorebtn" class="show-more-btn">Click for more</button>
                                <% } %>
                                    <% } %>
                                        <div class="message-form">
                                            <h2>Post a Message <img src="/images/stars.gif" alt=""></h2>
                                            <form action="/dashboard" method="post">
                                                <input type="text" name="title" placeholder="Title" maxlength="50"
                                                    minlength="1" required />
                                                <textarea name="body" placeholder="Write your message here..."
                                                    minlength="10" maxlength="250" required></textarea>

                                                <button type="submit" class="submit-btn">Create Message</button>
                                            </form>
                                        </div>
                </section>
            </div>
        </div>
        <div class="box-bottom">
            <div class="s01"></div>
        </div>
    </div>
    <footer>
        <p>Created by <a class="footer-link" href="https://github.com/polymorpheteen" target="_blank"
                rel="noopener noreferrer">@polymorpheteen</a></p>
    </footer>

    <script>
        const showMorebtn = document.getElementById("showMorebtn");

        if (showMorebtn) {
            showMorebtn.addEventListener("click", () => {
                document.querySelectorAll(".message-item.hidden").forEach(item => {
                    item.classList.remove("hidden");
                    item.classList.add("visible")
                });

                showMorebtn.style.display = "none";
            });
        }
    </script>

    <script>
        const editBtn = document.getElementById("editBtn");
        const saveBtn = document.getElementById("saveBtn");
        const cancelBtn = document.getElementById("cancelBtn");

        const views = document.querySelectorAll(".view");
        const edits = document.querySelectorAll(".edit");

        editBtn.addEventListener("click", () => {
            views.forEach(v => v.hidden = true);
            edits.forEach(e => e.hidden = false);

            editBtn.hidden = true;
            saveBtn.hidden = false;
            cancelBtn.hidden = false;
        });

        cancelBtn.addEventListener("click", () => {
            // reset input values
            edits.forEach(e => {
                const field = e.dataset.field;
                const view = document.querySelector(`.view[data-field="${field}"]`);
                e.value = view.textContent.trim();
            });

            views.forEach(v => v.hidden = false);
            edits.forEach(e => e.hidden = true);

            editBtn.hidden = false;
            saveBtn.hidden = true;
            cancelBtn.hidden = true;
        });

        saveBtn.addEventListener("click", async () => {
            const data = {};
            edits.forEach(e => data[e.dataset.field] = e.value);

            const res = await fetch("/dashboard", {
                method: "PUT",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                // update view text
                edits.forEach(e => {
                    const view = document.querySelector(`.view[data-field="${e.dataset.field}"]`);
                    view.textContent = e.value;
                });

                views.forEach(v => v.hidden = false);
                edits.forEach(e => e.hidden = true);

                editBtn.hidden = false;
                saveBtn.hidden = true;
                cancelBtn.hidden = true;
            } else {
                alert("Update failed");
            }
        });
    </script>
</body>

</html>